<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawing_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F4F4"
    android:padding="30dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="160dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/button_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/black_color_button"
                android:layout_width="37dp"
                android:layout_height="49dp"
                app:backgroundTint="#000000"
                app:cornerRadius="100dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/blue_color_button"
                android:layout_width="37dp"
                android:layout_height="49dp"
                app:backgroundTint="#1137F8"
                app:cornerRadius="100dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/red_color_button"
                android:layout_width="37dp"
                android:layout_height="49dp"
                app:backgroundTint="#F81111"
                app:cornerRadius="100dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/green_color_button"
                android:layout_width="37dp"
                android:layout_height="49dp"
                app:backgroundTint="#25ED1D"
                app:cornerRadius="100dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/yellow_color_button"
                android:layout_width="37dp"
                android:layout_height="49dp"
                app:backgroundTint="#FFE81E"
                app:cornerRadius="100dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/erase_button"
                android:layout_width="37dp"
                android:layout_height="49dp"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="100dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/adjust_width_button_1"
                android:layout_width="17dp"
                android:layout_height="29dp"
                app:backgroundTint="#000000"
                app:cornerRadius="100dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/adjust_width_button_2"
                android:layout_width="25dp"
                android:layout_height="36dp"
                app:backgroundTint="#000000"
                app:cornerRadius="100dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/adjust_width_button_3"
                android:layout_width="38dp"
                android:layout_height="50dp"
                app:backgroundTint="#000000"
                app:cornerRadius="100dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/reset" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>